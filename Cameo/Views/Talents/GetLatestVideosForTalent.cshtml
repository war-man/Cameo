@model IEnumerable<Cameo.ViewModels.VideoDetailsVM>

<h3 class="heading-divider heading-divider__themeColor">Последние видео</h3>
<hr />

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-sm-4">
            <div class="card">
                <div class="card-header">
                    <span>От @item.From для @item.To</span>
                    <span><small><a href="/Video/Details/@item.RequestID">Подробнее</a></small></span>
                </div>
                <div class="card-body">
                    <video width="240" height="320" controls><source src="/Video/GetVideo/@item.RequestID" type="video/mp4"></video>
                </div>
            </div>
        </div>
    }
</div>
