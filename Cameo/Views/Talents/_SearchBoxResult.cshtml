@model IEnumerable<Cameo.ViewModels.TalentShortInfoVM>

<ul id="talentsSearchList">
    @foreach (var item in Model)
    {
        @*<li onClick="SelectTalent(@item.ID);">@item.FullName</li>*@
        <li>
            <a href="/talents/details/@item.Username">
                <div>
                    <div class="searchImage singleTalentImg">
                        <img height="100%" src="@item.Avatar.Url" alt="@item.FullName"/>
                    </div>
                    <div class="talentInfo">
                        @*<div class="projectName"></div>*@
                        <div class="fullName">
                            <span class="name">@item.FullName</span>
                            <span class="badge">
                                <span>@item.PriceStr @localizer["UZS"]</span>
                            </span>
                        </div>
                    </div>
                </div>
            </a>
        </li>
    }
</ul>