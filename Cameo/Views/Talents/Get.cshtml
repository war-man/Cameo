@model List<Cameo.ViewModels.TalentGridViewItem>

@{ 
    //Dictionary<int, string> categories = ViewData["categories"] as Dictionary<int, string>;
}
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-lg-3 col-md-4 col-sm-4 col-xs-6">
            <div class="thumbnail">
                <a href="/talents/details/@item.ID">
                    @*<img src="@item.Avatar.Url" alt="Lights" style="width:100%">*@
                    <img class="lozad" data-src="@item.Avatar.Url" src="~/Content/Images/spinner.gif" />

                    <div class="caption">
                        <p>@item.FullName</p>
                        <p>@item.Price.ToString("### ### ##0") сум</p>
                        @if (item.Projects.Count > 0)
                        {
                            <p>@item.Projects[0].Name</p>
                        }

                        @if (item.Categories.Count > 0)
                        {
                            <p>
                                @{
                                    int max = item.Categories.Count;
                                    if (max > 3)
                                    { max = 3; }

                                    for (int i = 0; i < max; i++)
                                    {
                                        <span>@item.Categories[i].Name</span>
                                    }
                                }
                            </p>
                        }
                    </div>
                </a>
            </div>
        </div>
    }
</div>